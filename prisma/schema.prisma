generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model sessions {
  id      Int    @id(map: "sessions_pk") @default(autoincrement())
  user_id Int
  token   String @unique @db.VarChar
}

model users {
  id        Int     @id(map: "users_pk") @default(autoincrement())
  name      String  @db.VarChar
  email     String  @unique @db.VarChar
  password  String  @db.VarChar
  photo_url String? @db.VarChar
}

model merch {
  id        Int    @id(map: "merch_pk") @default(autoincrement())
  user_id   Int
  photo_url String
  title     String @db.VarChar
  price     Int
}

model posts {
  id          Int     @id(map: "posts_pk") @default(autoincrement())
  user_id     Int
  title       String  @db.VarChar
  description String
  link_url    String? @db.VarChar
}

model projects {
  id          Int    @id(map: "projects_pk") @default(autoincrement())
  user_id     Int
  name        String @db.VarChar
  instruments String @db.VarChar
  description String @db.VarChar
}
